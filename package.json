{
  "name": "sekondbrain-kanvas",
  "version": "1.0.0",
  "description": "Kanvas - AI Agent Dashboard for DevOps",
  "main": "dist/electron/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "cli": "./start-devops-session.sh",
    "cli:list": "node src/session-coordinator.js list",
    "cli:start": "node src/session-coordinator.js start",
    "cli:close": "node src/close-session.js",
    "cli:cleanup": "./cleanup-sessions.sh",
    "test": "jest",
    "test:kanvas": "jest --config jest.kanvas.config.cjs",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "chokidar": "^3.5.3",
    "detect-port": "^2.1.0",
    "electron-store": "^11.0.2",
    "glob": "^11.0.0",
    "groq-sdk": "^0.37.0",
    "js-yaml": "^4.1.0",
    "openai": "^4.20.0",
    "zustand": "^5.0.2"
  },
  "optionalDependencies": {
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^2.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "vite": "^5.4.11"
  },
  "build": {
    "appId": "com.sekondbrain.kanvas",
    "productName": "Kanvas",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "SeKondBrain AI Labs",
  "license": "MIT"
}
